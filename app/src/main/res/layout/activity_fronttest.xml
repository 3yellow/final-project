<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fronttest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/frontground1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="1064dp"
                android:layout_height="144dp"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="1124dp"
                    android:layout_height="153dp"
                    android:layout_weight="1"
                    android:text="\t\t\t\t\t\t\t\t\t\t\t前測"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#257B81"
                    android:textSize="96sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="497dp">

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="982dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="948dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Question"
                        android:layout_width="950dp"
                        android:layout_height="127dp"
                        android:layout_weight="1"
                        android:text="Questiong"
                        android:textColor="#000000"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="408dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="311dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/Ans"
                            android:layout_width="match_parent"
                            android:layout_height="312dp">

                            <RadioButton
                                android:id="@+id/radioButton1"
                                android:layout_width="951dp"
                                android:layout_height="64dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:button="@drawable/radiobstyle"
                                android:text="\tA.發熱"
                                android:textSize="30sp" />

                            <RadioButton
                                android:id="@+id/radioButton2"
                                android:layout_width="954dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:button="@drawable/radiobstyle"
                                android:text="\tB.肌肉痙攣"
                                android:textSize="30sp" />

                            <RadioButton
                                android:id="@+id/radioButton3"
                                android:layout_width="954dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:button="@drawable/radiobstyle"
                                android:text="\tC.失衡綜合征"
                                android:textSize="30sp" />

                            <RadioButton
                                android:id="@+id/radioButton4"
                                android:layout_width="951dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:button="@drawable/radiobstyle"
                                android:text="\tD.透析性骨病"
                                android:textSize="30sp" />
                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/YourAns"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="YourAns"
                android:textSize="24sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

            <Button
                android:id="@+id/button12"
                android:layout_width="262dp"
                android:layout_height="76dp"
                android:background="@drawable/shape"
                android:onClick="tofronttest2"
                android:text="下一題"
                android:textSize="36sp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>