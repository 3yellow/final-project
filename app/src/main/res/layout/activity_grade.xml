<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Grade">
    <TextView
        android:id="@+id/textView14"
        android:layout_width="496dp"
        android:layout_height="113dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="37dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065" />

    <TextView
        android:id="@+id/patient_id"
        android:layout_width="214dp"
        android:layout_height="57dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.243"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.277" />

    <TextView
        android:id="@+id/nurse_id"
        android:layout_width="214dp"
        android:layout_height="57dp"
        android:text="TextView"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="1021dp"
        android:layout_height="62dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.398">

        <TextView
            android:layout_width="255dp"
            android:layout_height="62dp"
            android:text="衛教日期"
            android:textSize="30dp" />

        <TextView
            android:layout_width="255dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:text="第幾次衛教"
            android:textSize="30dp" />

        <TextView
            android:layout_width="255dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:text="成績"
            android:textSize="32dp" />
        <TextView
            android:layout_width="255dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:text="護理師"
            android:textSize="32dp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="1021dp"
        android:layout_height="372dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.598"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.89">


        <TableLayout
            android:layout_width="1021dp"
            android:layout_height="420dp"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="1021dp"
                android:layout_height="62dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_1_date"
                    android:layout_width="255dp"
                    android:layout_height="62dp"
                    android:text="2020/08/23"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/btn_1_time"
                    android:layout_width="255dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="10dp"
                    android:text="4"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/btn_1_score"
                    android:layout_width="255dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="10dp"
                    android:text="88"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/btn_1_nurse"
                    android:layout_width="255dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="10dp"
                    android:text="李大奔"
                    android:textSize="30dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_2_date"
                    android:layout_width="350dp"
                    android:layout_height="62dp"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/btn_2_time"
                    android:layout_width="300dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/btn_2_score"
                    android:layout_width="300dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="30dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_3_date"
                    android:layout_width="350dp"
                    android:layout_height="62dp"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/btn_3_time"
                    android:layout_width="300dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/btn_3_score"
                    android:layout_width="300dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="30dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_4_date"
                    android:layout_width="350dp"
                    android:layout_height="62dp"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/btn_4_time"
                    android:layout_width="300dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/btn_4_score"
                    android:layout_width="300dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="30dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_5_date"
                    android:layout_width="350dp"
                    android:layout_height="62dp"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/btn_5_time"
                    android:layout_width="300dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/btn_5_score"
                    android:layout_width="300dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="30dp" />
            </TableRow>

        </TableLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tev_id"
        android:layout_width="225dp"
        android:layout_height="54dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.742"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276" />

</androidx.constraintlayout.widget.ConstraintLayout>