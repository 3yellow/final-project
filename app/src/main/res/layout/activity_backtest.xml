<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00F0F0F0"
    tools:context=".backtest">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/readtextbg"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="16dp"
                    android:layout_height="52dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/backkey"
                    android:scaleType="center" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="1116dp"
                    android:layout_height="79dp"
                    android:layout_weight="1"
                    android:textColor="#257B81"
                    android:textSize="36sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="624dp"
            android:layout_height="181dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="552dp"
                android:layout_height="182dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Question"
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:layout_weight="1"
                            android:text="Questiong"
                            android:textColor="#000000"
                            android:textSize="30sp" />
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="628dp"
            android:layout_height="401dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="549dp"
                android:layout_height="386dp"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="528dp"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioButton5"
                        android:layout_width="542dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:button="@drawable/radiobstyle"
                        android:text="\tA.item1"
                        android:textSize="30sp" />

                    <RadioButton
                        android:id="@+id/radioButton6"
                        android:layout_width="552dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:button="@drawable/radiobstyle"
                        android:text="\tB.item2"
                        android:textSize="30sp" />

                    <RadioButton
                        android:id="@+id/radioButton7"
                        android:layout_width="552dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:button="@drawable/radiobstyle"
                        android:text="\tC.item3"
                        android:textSize="30sp" />

                    <RadioButton
                        android:id="@+id/radioButton8"
                        android:layout_width="555dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:button="@drawable/radiobstyle"
                        android:text="\tD.item4"
                        android:textSize="30sp" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/YourAns"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="YourAns"
                android:textSize="24sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="828dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button"
                    android:layout_width="233dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape2"
                    android:onClick="tobacktest2"
                    android:text="確認"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="152dp"
                android:layout_height="807dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button12"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape"
                    android:onClick="tobacktest2"
                    android:text="下一題"
                    android:textSize="30sp"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/Ans"
            android:layout_width="525dp"
            android:layout_height="397dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>